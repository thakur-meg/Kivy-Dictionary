#:kivy 2.0.0
<HomeScreen>:
    GridLayout:
        cols:1
        GridLayout:
            canvas.before:
                Color:
                    rgba: rgba('#0c9ea4ff')
                Triangle:
                    points: [0, self.size[1], self.size[0], self.size[1], self.size[0], self.size[1]-(.4*self.size[1])]
                Color:
                    rgba: rgba('#013e54ff')
                Triangle:
                    points: [0, self.size[1], self.size[0], self.size[1], 0, self.size[1]-(.4*self.size[1])]
                
            cols:1
            padding: 15, 15
            spacing: 20, 20

            Label:
                text: ""
            Image:
                source: '1.png'
                size_hint_y: None
                height: 150
                allow_stretch: True
            Label:
                text: "DICTIONARY"
                color: 0.047, 0.619, 0.658, 1
                font_size: '45sp'
                font_name: 'dejavusans'
             
            RelativeLayout:
                SmoothButton:
                    text:"Learn!"
                    font_name: 'dejavusans'
                    on_press: root.dicscreen()
                    size_hint: 0.4, 0.4  
                    pos_hint: {'center_x': 0.5, 'center_y': 0.9}  
                    border_radius: [22, 2, 22, 2]
               
            

<DicScreen>:

    GridLayout:
        cols:1
        padding: 30,30
        spacing: 30,30
        RelativeLayout:
            ImageButton:
            
                on_press: root.log_out()
                source: '3.png' if self.hovered else '2.png'
                size_hint: 0.5,0.5
                pos_hint: {'center_x':0.94,'center_y':0.81}
        
        Label:
            text:"ENTER A WORD"
            font_name: 'dejavusans'
            color: 0.047, 0.619, 0.658, 1
            font_size: '35sp'
            pos_hint: {'center_x':0.5,'center_y':0.9}

        FlatInput:
            hint_text: "Words to try: annihilate, delinquent and more..."    
            id: word
            size_hint: 0.3, 0.5
            pos_hint: 0.5, 1
        RelativeLayout:

            StrokeButton:
                text:"Search"
                font_name: 'dejavusans'
                back_color: 0.047, 0.619, 0.658, 1
                on_press: root.translate()
                on_press: self.back_color = 0, 0.48, 0.63, 1
                on_release: self.back_color = 0.047, 0.619, 0.658, 1
                size_hint: 0.5, 0.6
                pos_hint: {'center_x':0.5, 'center_y':0.9}


        ScrollView:
            Label:
                id: translated
                text:""
                color: 0.047, 0.619, 0.658, 1
                text_size: self.width,None
                size_hint_y: None
                height: self.texture_size[1]





<RootWidget>:
    HomeScreen:
        name: "homescreen"
    DicScreen:
        name: "dicscreen"  

<SmoothButton@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    back_color: (0.047, 0.619, 0.658, 1)
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

<StrokeButton@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    back_color: (0.047, 0.619, 0.658, 1)
    border_radius: 25
    color: self.back_color
    bold: True
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2

<FlatInput@TextInput>:
    background_active: ''
    background_normal: ''
    background_color: [1,1,1,0]
    canvas.before:
        Color:
            rgba: rgba('#013e54ff')
        Rectangle:
            pos: self.pos
            size: [self.size[0], 1]